        "CellrangerJobDef": {
            "Type": "AWS::Batch::JobDefinition",
            "Properties": {
                "ContainerProperties": {
                    "Image": {
                        "Ref": "CellrangerImage"
                    },
                    "Command": [
                        "bash",
                        "command.sh"
                    ],
                    "Volumes": [
                        {
                            "Host": {
                                "SourcePath": "/vol_mnt"
                            },
                            "Name": "volume1"
                        }
                    ],
                    "MountPoints": [
                        {
                            "ContainerPath": "/home/ec2-user/vol_mnt",
                            "SourceVolume": "volume1",
                            "ReadOnly": false
                        }
                    ],
                    "ReadonlyRootFilesystem": false,
                    "Privileged": false,
                    "ResourceRequirements": [
                        {
                            "Value": "32",
                            "Type": "VCPU"
                        },
                        {
                            "Value": "61440",
                            "Type": "MEMORY"
                        }
                    ]
                },
                "JobDefinitionName": {
                    "Fn::Join": [
                        "",
                        [
                            {
                                "Ref": "PipelineName"
                            },
                            "Cellranger_def"
                        ]
                    ]
                },
                "PlatformCapabilities": [
                    "EC2"
                ],
                "PropagateTags": false,
                "RetryStrategy": {
                    "Attempts": 5
                },
                "Timeout": {
                    "AttemptDurationSeconds": 1296000
                },
                "Type": "container"
            }
        },
